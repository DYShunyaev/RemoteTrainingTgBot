<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="shunyaev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users_bot"/>
            </not>
        </preConditions>

        <createTable tableName="users_bot">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="shunyaev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_registration"/>
            </not>
        </preConditions>

        <createTable tableName="user_registration">
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="chat_id"
                             referencedTableName="users_bot"
                             referencedColumnNames="chat_id"/>
            </column>
            <column name="registration" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>